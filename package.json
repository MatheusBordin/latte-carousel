{
    "name": "latte-carousel",
    "version": "0.7.0",
    "description": "LatteCarousel is a lightweight and responsive carousel.",
    "main": "index.js",
    "repository": "https://github.com/latte-carousel/latte-carousel.git",
    "author": "latte-carousel",
    "license": "MIT",
    "private": false,
    "scripts": {
        "build": "yarn run format && yarn run build:ts && yarn run build:scss && yarn run concat && yarn run minify",
        "build:ts": "tsc",
        "build:scss": "node-sass ./src/scss/style.scss ./dist/latte-carousel.css",
        "concat": "yarn run concat:js && yarn run concat:css",
        "concat:js": "concat -o ./dist/latte-carousel.js ./src/version ./dist/latte-carousel.js",
        "concat:css": "concat -o ./dist/latte-carousel.css ./src/version ./dist/latte-carousel.css",
        "minify": "yarn run minify:js && yarn run minify:css",
        "minify:js": "uglifyjs --compress --mangle --comments all --output ./dist/latte-carousel.min.js -- ./dist/latte-carousel.js",
        "minify:css": "cleancss -o ./dist/latte-carousel.min.css ./dist/latte-carousel.css",
        "format": "yarn run format:scss",
        "format:scss": "csscomb ./src/scss ./examples",
        "serve": "http-server ./",
        "watch": "yarn run watch:ts",
        "watch:ts": "tsc --watch",
        "lint": "yarn run lint:ts",
        "lint:ts": "tslint ./src/ts/*.ts"
    },
    "devDependencies": {
        "clean-css-cli": "^4.1.11",
        "concat": "^1.0.3",
        "csscomb": "^4.2.0",
        "eslint": "^4.19.1",
        "http-server": "^0.11.1",
        "node-sass": "^4.9.0",
        "tslint": "^5.10.0",
        "typescript": "^2.8.4",
        "uglify-js": "^3.3.28"
    }
}
