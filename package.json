{
    "name": "latte-carousel",
    "version": "0.1.0",
    "description": "LatteCarousel is a lightweight and responsive carousel.",
    "main": "index.js",
    "repository": "https://github.com/latte-carousel/latte-carousel.git",
    "author": "latte-carousel",
    "license": "MIT",
    "private": false,
    "scripts": {
        "build": "yarn run format && yarn run build:ts && yarn run build:scss",
        "build:ts": "tsc",
        "build:scss": "node-sass ./src/scss/style.scss ./dist/latte-carousel.css",
        "watch": "yarn run watch:ts",
        "watch:ts": "tsc --watch",
        "lint": "yarn run lint:ts",
        "lint:ts": "tslint ./src/ts/*.ts",
        "format": "yarn run format:scss",
        "format:scss": "csscomb ./src/scss ./examples",
        "serve": "http-server ./"
    },
    "devDependencies": {
        "csscomb": "^4.2.0",
        "eslint": "^4.18.2",
        "http-server": "^0.11.1",
        "node-sass": "^4.7.2",
        "tslint": "^5.9.1",
        "typescript": "^2.7.2"
    }
}
