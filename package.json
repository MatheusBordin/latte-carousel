{
    "name": "latte-carousel",
    "version": "0.7.0",
    "description": "LatteCarousel is a lightweight and responsive carousel.",
    "repository": "https://github.com/latte-carousel/latte-carousel.git",
    "author": "latte-carousel",
    "license": "MIT",
    "private": false,
    "main": "dist/latte-carousel.min.js",
    "types": "dist/lib/carousel.d.ts",
    "scripts": {
        "build": "webpack",
        "watch": "webpack --watch",
        "serve": "http-server './'",
        "format": "yarn run format:prettier && yarn run format:csscomb",
        "format:prettier": "prettier --find-config-path --write './src/**' './example/**'",
        "format:csscomb": "csscomb './src/scss' './example'",
        "lint": "yarn run lint:tslint && yarn run lint:eslint",
        "lint:tslint": "tslint './**/*.ts'",
        "lint:eslint": "eslint './**/*.js'"
    },
    "devDependencies": {
        "clean-webpack-plugin": "^0.1.19",
        "css-loader": "^0.28.11",
        "csscomb": "^4.2.0",
        "eslint": "^4.19.1",
        "http-server": "^0.11.1",
        "mini-css-extract-plugin": "^0.4.0",
        "node-sass": "^4.9.0",
        "postcss-loader": "^2.1.5",
        "prettier": "1.13.5",
        "sass-loader": "^7.0.3",
        "ts-loader": "^4.4.1",
        "tslint": "^5.10.0",
        "typescript": "^2.9.2",
        "webpack": "^4.12.0",
        "webpack-command": "^0.2.1"
    }
}
